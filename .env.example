# Threat Hunting MCP Server Configuration Template
# Copy this file to .env and fill in your actual values

# ===== MCP Server Settings =====
SERVER_NAME=threat_hunting_kb
LOG_LEVEL=INFO
AUDIT_LOG_PATH=/tmp/threat_hunting_mcp_audit.log

# ===== Security Configuration (REQUIRED) =====
# Generate secure random keys for production:
# python3 -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ENCRYPTION_KEY=your-encryption-key-change-this-in-production

# ===== Atlassian Integration (Optional) =====
# Required for Jira ticket creation and Confluence playbook access
ATLASSIAN_URL=https://yourorg.atlassian.net
ATLASSIAN_USERNAME=your-email@yourorg.com
ATLASSIAN_API_TOKEN=your-api-token-here
CONFLUENCE_SPACE=THREATHUNT
JIRA_PROJECT=HUNT

# ===== Splunk Integration (Optional) =====
# Required for hunt query execution and ML analysis
SPLUNK_HOST=your-splunk-instance.com
SPLUNK_PORT=8089
SPLUNK_TOKEN=your-splunk-auth-token-here

# ===== Redis Configuration (Optional) =====
# Required for caching and rate limiting features
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your-redis-password

# ===== HEARTH Community Integration (REQUIRED for HEARTH features) =====
# Path to your local HEARTH repository clone
# Clone from: https://github.com/THORCollective/HEARTH
HEARTH_PATH=/path/to/HEARTH

# ===== ML/NLP Configuration (Optional) =====
# spaCy model for natural language processing
# Install with: python -m spacy download en_core_web_lg
SPACY_MODEL=en_core_web_lg

# ===== Discord Bot Configuration (Optional) =====
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_COMMAND_PREFIX=!th
DISCORD_BOT_DESCRIPTION=Threat Hunting Assistant
AUTHORIZED_ROLES=Bot,ThreatHunter
AUTHORIZED_CHANNELS=threat-hunting,security-ops

# ===== Rate Limiting =====
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60

# ===== Hunt Management =====
AUTO_CREATE_TICKETS=true
AUTO_CREATE_DETECTIONS=false
HUNT_RESULT_RETENTION=86400

# ===== Error Handling =====
RETRY_ATTEMPTS=3
RETRY_DELAY=5
GRACEFUL_DEGRADATION=true
